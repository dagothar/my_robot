<?xml version="1.0"?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- properties -->
  <xacro:property name="pi" value="3.141592"/>
  <xacro:property name="l1" value="0.75"/>
  <xacro:property name="l2" value="0.5"/>
  <xacro:property name="lower_limit" value="-6.28"/>
  <xacro:property name="upper_limit" value="6.28"/>
  <xacro:property name="velocity_limit" value="1.0"/>
  <xacro:property name="effort_limit" value="10.0"/>
  
  <!-- materials -->
  <xacro:include filename="materials.xml"/>
  
  <!-- gazebo properties -->
  <xacro:include filename="my_robot_gazebo.xml"/>
  
  <!-- links -->
  <link name="world"/>
  
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.025"/>
      <material name="dark"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 -0.025"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 -0.025"/>
      <mass value="1"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
  </link>
  
  <link name="link1">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
        <!--cylinder length="0.1" radius="0.05"/-->
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.05"/>
      <material name="light"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.05"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 0.05"/>
      <mass value="1"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
  </link>
  
  <link name="link2">
    <visual>
      <geometry>
        <box size="${l1+0.05} 0.05 0.05"/>
      </geometry>
      <origin rpy="0 0 0" xyz="${l1/2} 0 0.075"/>
      <material name="dark"/>
    </visual>
    <collision>
      <geometry>
        <box size="${l1+0.05} 0.05 0.05"/>
      </geometry>
      <origin rpy="0 0 0" xyz="${l1/2} 0 0.075"/>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="${l1/2} 0 0.075"/>
      <mass value="1"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
  </link>
  
